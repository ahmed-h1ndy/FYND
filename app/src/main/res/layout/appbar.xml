<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp"

    android:background="@drawable/activity_background">

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/FYND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FYND"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:fontFamily="cursive"/>

    <ImageView
        android:layout_marginRight="8dp"
        android:id="@+id/go_to_cart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_add_shopping_cart_24"
        app:tint="@color/white"/>

    <ImageView
        android:id="@+id/previous_orders"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/go_to_cart"
        app:layout_constraintEnd_toStartOf="@+id/go_to_cart"
        app:layout_constraintTop_toTopOf="@+id/go_to_cart"
        app:srcCompat="@drawable/baseline_history_24"
        app:tint="@color/white"/>
    <ImageView
        android:id="@+id/logout_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/baseline_logout_24"
        app:layout_constraintEnd_toStartOf="@id/previous_orders"
        app:layout_constraintTop_toTopOf="@id/previous_orders"
        app:layout_constraintBottom_toBottomOf="@id/previous_orders"
        app:tint="@color/white"/>
    <ImageView
        android:id="@+id/chart_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/baseline_pie_chart_24"
        app:layout_constraintEnd_toStartOf="@id/logout_button"
        app:layout_constraintTop_toTopOf="@id/logout_button"
        app:layout_constraintBottom_toBottomOf="@id/logout_button"
        android:layout_marginRight="8dp"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>