<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/activity_background">

    <TextView
        android:id="@+id/fynd_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FYND"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="52dp"
        android:textColor="@color/white"
        android:textSize="96sp"
        android:fontFamily="cursive"/>
    <TextView

        android:id="@+id/name_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/name_value_register"
        app:layout_constraintTop_toBottomOf="@id/fynd_register"
        android:textColor="@color/white"
        android:text="Name"
        android:textSize="16sp"
        />
    <EditText
        android:padding="8dp"
        android:id="@+id/name_value_register"
        android:layout_width="256dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_register"
        android:background="@drawable/login_input_background"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/email_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/email_value_register"
        app:layout_constraintTop_toBottomOf="@id/name_value_register"
        android:textColor="@color/white"
        android:text="E-mail"
        android:textSize="16sp"
        />

    <EditText
        android:padding="8dp"
        android:id="@+id/email_value_register"
        android:layout_width="256dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_register"
        android:background="@drawable/login_input_background"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/password_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/email_value_register"
        app:layout_constraintTop_toBottomOf="@id/email_value_register"
        android:textColor="@color/white"
        android:text="Password"
        android:textSize="16sp"
        />
    <EditText
        android:padding="8dp"
        android:id="@+id/password_value_register"
        android:layout_width="256dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_register"
        android:background="@drawable/login_input_background"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/password_recovery_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/password_value_register"
        app:layout_constraintTop_toBottomOf="@id/password_value_register"
        android:textColor="@color/white"
        android:text="Recovery Question"
        android:textSize="16sp"
        />
    <EditText
        android:padding="8dp"
        android:id="@+id/password_recovery_question_value"
        android:layout_width="256dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_recovery_question"
        android:background="@drawable/login_input_background"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/password_recovery_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/password_value_register"
        app:layout_constraintTop_toBottomOf="@id/password_recovery_question_value"
        android:textColor="@color/white"
        android:text="Recovery Answer"
        android:textSize="16sp"
        />
    <EditText
        android:padding="8dp"
        android:id="@+id/password_recovery_answer_value"
        android:layout_width="256dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_recovery_answer"
        android:background="@drawable/login_input_background"
        android:textColor="@color/white"
        />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_recovery_answer_value">

        <RadioButton
            android:id="@+id/radio_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:checked="true"/>
    </RadioGroup>


    <Button
        android:id="@+id/add_birthdate_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Birthdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />
    <Button
        android:id="@+id/create_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="CREATE ACCOUNT"
        android:layout_marginBottom="16dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>