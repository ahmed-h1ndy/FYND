<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/cart_product_image"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mobile" />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/cart_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="product name"
        app:layout_constraintStart_toEndOf="@+id/cart_product_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginRight="16dp"
        android:id="@+id/cart_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40$"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_marginTop="12dp"
        android:id="@+id/cart_decrease_button"
        android:layout_width="34dp"
        android:layout_height="29dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/cart_product_image"
        app:layout_constraintTop_toBottomOf="@+id/cart_product_name"
        app:srcCompat="@drawable/baseline_arrow_circle_up_24"
        android:rotation="180"/>

    <ImageView
        android:id="@+id/cart_increase_button"
        android:layout_width="34dp"
        android:layout_height="29dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/cart_product_amount"
        app:layout_constraintTop_toTopOf="@+id/cart_decrease_button"
        app:srcCompat="@drawable/baseline_arrow_circle_up_24" />

    <TextView
        android:id="@+id/cart_product_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/cart_decrease_button"
        app:layout_constraintTop_toTopOf="@+id/cart_decrease_button"
        app:layout_constraintBottom_toBottomOf="@id/cart_decrease_button"/>

    <ImageView
        android:id="@+id/remove_button"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cart_product_price"
        app:layout_constraintEnd_toStartOf="@+id/cart_product_price"
        app:layout_constraintTop_toTopOf="@+id/cart_product_price"
        app:srcCompat="@drawable/baseline_add_shopping_cart_24" />
</androidx.constraintlayout.widget.ConstraintLayout>