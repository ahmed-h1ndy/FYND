<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="24dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/order_email"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        app:layout_constraintStart_toEndOf="@id/order_id"
        app:layout_constraintEnd_toStartOf="@id/order_price"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id" />

    <TextView
        android:id="@+id/order_feedback"
        app:layout_constraintTop_toBottomOf="@id/order_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/order_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="feedback" />

    <TextView
        android:id="@+id/order_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/order_feedback"
        app:layout_constraintTop_toBottomOf="@id/order_id" />
    <EditText
        android:id="@+id/order_feedback_value"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_feedback"/>
    <EditText
        android:id="@+id/order_rating_value"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/order_feedback_value"
        app:layout_constraintEnd_toStartOf="@id/order_rate_button"
        app:layout_constraintTop_toBottomOf="@id/order_rating"
        android:inputType="number"/>

    <Button
        android:id="@+id/order_rate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_feedback"
        android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>